target 'Spike' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Spike
  pod 'PNChart'

  target 'SpikeTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'SpikeUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end

target 'widget' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for widget
  pod 'PNChart'

end
